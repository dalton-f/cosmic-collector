@import "tailwindcss";

@theme {
  --font-montserrat: "Montserrat", sans-serif;
}

.button {
  border: 2px solid white;
  border-radius: 0.5rem;
  background: linear-gradient(
    180deg,
    rgba(154, 153, 162, 0.35) 0%,
    rgba(0, 0, 0, 0) 100%
  );
  padding: 1rem 2rem;
  cursor: pointer;

  transition: all 0.3s linear;
}

.button:hover {
  background: white;
  color: black;
}
